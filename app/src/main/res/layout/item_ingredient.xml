<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_ingredient_quantity"
        tools:text="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/item_ingredient_guideline"/>

    <android.support.constraint.Guideline
        android:id="@+id/item_ingredient_guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_ingredient_measure"
        tools:text="sad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/item_ingredient_guideline"
        app:layout_constraintTop_toBottomOf="@id/item_ingredient_quantity"
        app:layout_constraintStart_toStartOf="@id/item_ingredient_quantity"/>

    <TextView
        android:id="@+id/item_ingredient_ingredient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_ingredient_guideline"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ingredient" />
</android.support.constraint.ConstraintLayout>